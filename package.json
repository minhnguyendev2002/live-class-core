{
  "name": "live-class",
  "version": "0.0.1",
  "description": "",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "build:api": "nest build live-class",
    "build:receiver": "nest build receiver",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:api-debug": "nest start live-class --debug --watch",
    "start:receiver-debug": "nest start receiver --debug --watch",
    "start:receiver-dev": "nest start receiver --watch",
    "start:prod": "node dist/apps/live-class/apps/live-class/src/main.js",
    "start:receiver-prod": "node dist/apps/receiver/apps/receiver/src/main.js",
    "start:api-prod": "node dist/apps/live-class/apps/live-class/src/main.js",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./apps/live-class/test/jest-e2e.json",
    "typeorm": "ts-node -r tsconfig-paths/register ./node_modules/typeorm/cli.js --config ormconfig.ts",
    "typeorm:migrate": "npm run typeorm migration:generate -- -n",
    "typeorm:run": "npm run typeorm migration:run"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.6",
    "@nestjs/config": "^1.0.1",
    "@nestjs/core": "^8.0.6",
    "@nestjs/jwt": "^8.0.0",
    "@nestjs/microservices": "^8.1.2",
    "@nestjs/mongoose": "^9.0.1",
    "@nestjs/platform-express": "^8.0.6",
    "@nestjs/platform-socket.io": "^8.1.2",
    "@nestjs/schedule": "^1.0.1",
    "@nestjs/swagger": "^5.0.9",
    "@nestjs/typeorm": "8.0.2",
    "@nestjs/websockets": "^8.1.2",
    "@types/uuid": "^8.3.1",
    "agora-access-token": "^2.0.4",
    "amqp-connection-manager": "^3.7.0",
    "amqplib": "^0.8.0",
    "apisauce": "^2.1.2",
    "class-transformer": "^0.5.0",
    "class-validator": "^0.13.1",
    "form-data": "^4.0.0",
    "image-size": "^1.0.0",
    "moment": "^2.29.1",
    "mongoose": "^6.0.12",
    "mysql2": "^2.3.0",
    "nanoid": "^3.1.30",
    "netless-token": "^1.0.2",
    "passport-jwt": "^4.0.0",
    "redis": "^3.1.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.3.0",
    "socket.io-redis": "^6.1.1",
    "swagger-ui-express": "^4.1.6",
    "typeorm": "0.2.45",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^7.6.0",
    "@nestjs/schematics": "^7.3.0",
    "@nestjs/testing": "^7.6.15",
    "@types/cron": "^1.7.3",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.22",
    "@types/multer": "^1.4.7",
    "@types/node": "^14.14.36",
    "@types/passport-jwt": "^3.0.6",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^8.1.0",
    "eslint-plugin-prettier": "^3.3.1",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "supertest": "^6.1.3",
    "ts-jest": "^26.5.4",
    "ts-loader": "^8.0.18",
    "ts-node": "^9.1.1",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.2.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/",
      "<rootDir>/libs/"
    ],
    "moduleNameMapper": {
      "@app/common-core/(.*)": "<rootDir>/libs/common-core/src/$1",
      "@app/common-core": "<rootDir>/libs/common-core/src"
    }
  }
}
